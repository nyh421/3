<div>
  <h1>User info</h1>
  <%= image_tag current_user.get_profile_image %>
  <h3>name:<%= current_user.name %></h3>
  <h3>introduction:<%= current_user.introduction %></h3>
  <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
</div>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image %></p>
  <%= link_to book_path(book.id) do %>
    <p>Title:<%= book.title %></p>
  <% end %>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>
